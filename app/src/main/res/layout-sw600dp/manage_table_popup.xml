<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_btn_radius_soft_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_margin_padding_large"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โต๊ะ"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size_large" />

        <TextView
            android:id="@+id/tv_table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_padding_large"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size_extra_extra_extra_large"
            tools:text="A1" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/default_margin_padding_large"
        android:layout_marginStart="@dimen/default_margin_padding_large"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_customer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="จำนวนลูกค้า"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size_large" />

        <HorizontalScrollView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_num">

            <EditText
                android:id="@+id/et_customer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin_padding_large"
                android:gravity="center"
                android:hint="1"
                android:inputType="number"
                android:textColor="@color/maginder_deep_grey"
                android:textSize="@dimen/default_text_size_large" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="ท่าน"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size_large" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding_large"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_radius_soft_orange"
            android:text="ตกลง"
            android:textColor="@color/maginder_soft_white"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding_large"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_radius_soft_white"
            android:text="ยกเลิก"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size" />

    </LinearLayout>

</LinearLayout>