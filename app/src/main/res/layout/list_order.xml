<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_padding_extra_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/default_margin_padding"
            android:scaleType="centerCrop"
            tools:src="@drawable/food" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_order_kitchen_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_order_zone_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:hint="ชื่อรายเมนู"
            android:textSize="@dimen/default_text_size_extra_small" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:hint="ราคา"
            android:textSize="@dimen/default_text_size_extra_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_margin_padding_small"
            android:layout_marginTop="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_remove_order"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/default_margin_padding_small"
                android:background="@drawable/bg_btn_radius_soft_orange"
                android:text="-"
                android:textColor="@color/maginder_soft_white"
                android:textSize="@dimen/default_text_size_extra_small"
                android:visibility="invisible"
                tools:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_choose_menu"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/default_margin_padding_small"
                    android:background="@drawable/bg_btn_order_food"
                    android:text="+ เพิ่ม"
                    android:textColor="@color/maginder_soft_white"
                    android:textSize="@dimen/default_text_size_small" />

                <Button
                    android:id="@+id/btn_menu_amount"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/default_margin_padding_small"
                    android:background="@drawable/bg_btn_radius_soft_white"
                    android:text="0"
                    android:textColor="@color/maginder_deep_grey"
                    android:textSize="@dimen/default_text_size_small"
                    android:visibility="invisible" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_add_order"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/default_margin_padding_small"
                android:background="@drawable/bg_btn_radius_soft_orange"
                android:text="+"
                android:textColor="@color/maginder_soft_white"
                android:textSize="@dimen/default_text_size_extra_small"
                android:visibility="invisible"
                tools:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>