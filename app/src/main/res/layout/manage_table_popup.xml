<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_radius_soft_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_padding_large"
        android:layout_marginStart="@dimen/default_margin_padding_large"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/table"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tv_table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size"
            tools:text="A1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_padding_large"
        android:layout_marginStart="@dimen/default_margin_padding_large">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_open_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="ต้องการเปิดบริการโต๊ะ ?"
                android:textColor="@color/maginder_deep_grey"
                android:textSize="@dimen/default_text_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_customer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="จำนวนลูกค้า"
                android:textColor="@color/maginder_deep_grey"
                android:textSize="@dimen/default_text_size" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"

                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/default_margin_padding_large"
                android:layout_toStartOf="@id/tv_num">

                <EditText
                    android:id="@+id/et_customer_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="1"
                    android:inputType="number"
                    android:textColor="@color/maginder_deep_grey"
                    android:textSize="@dimen/default_text_size" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="ท่าน"
                android:textColor="@color/maginder_deep_grey"
                android:textSize="@dimen/default_text_size" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_radius_soft_orange"
            android:text="ตกลง"
            android:textColor="@color/maginder_soft_white"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_radius_white_with_corner_soft_orange"
            android:text="ยกเลิก"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size" />

    </LinearLayout>

</LinearLayout>