<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_btn_radius_soft_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginEnd="@dimen/default_margin_padding_large"
        android:layout_marginStart="@dimen/default_margin_padding_large"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ท่านต้องการจะสั่งอาหาร ที่ได้เลือกไว้"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_radius_soft_orange"
            android:text="ตกลง"
            android:textColor="@color/maginder_soft_white"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_radius_white_with_corner_soft_orange"
            android:text="ยกเลิก"
            android:textColor="@color/maginder_deep_grey"
            android:textSize="@dimen/default_text_size" />

    </LinearLayout>


</LinearLayout>